{
    "compilerOptions": {
        "lib": ["es2015", "dom"],
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "ES5",
        "baseUrl": ".",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "outDir": "../dist/js/",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true
    }
}
